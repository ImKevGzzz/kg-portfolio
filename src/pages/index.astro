---
import Layout from '../layouts/Layout.astro';
import GithubIcon from '../Icons/GithubIcon.astro';
import InstagramIcon from '../Icons/InstagramIcon.astro';
import EmailIcon from '../Icons/EmailIcon.astro';
import LinkedinIcon from '../Icons/LinkedinIcon.astro';
import Experience from '../components/Experience.astro';
import Projects from '../components/Projects.astro';
import SkillsAndTools from '../components/SkillsAndTools.astro';

const socialMedia = [
	{
		socialName: 'Github',
		socialIcon: GithubIcon,
		socialNetworkUrl: "https://github.com/ImKevGzzz"
	},
	{
		socialName: 'LinkedIn',
		socialIcon: LinkedinIcon,
		socialNetworkUrl: "https://www.linkedin.com/in/kev-garc%C3%ADa/"
	},
	{
		socialName: 'Instagram',
		socialIcon: InstagramIcon,
		socialNetworkUrl: "https://www.instagram.com/__kev_garcia__/"
	},
	{
		socialName: 'Contáctame',
		socialIcon: EmailIcon,
		socialNetworkUrl: "mailto:kevingarciaoviedo05@gmail.com"
	}
]
---

<Layout title="Portfolio">
	<main class="flex flex-col">
		<article class="mt-24 grid grid-cols-[355px,683px] gap-10 w-[1086px] h-[355px] mx-auto">
			<section>
				<img class="rounded-[500px] w-[355px] h-[355px] shadow-[0px_5px_50px_0px_rgba(255,144,64,0.2)]" src="/ProfilePictureKev.webp" alt="Profile Picture"/>
			</section>
			<section>
				<h1 class="text-5xl font-bold dark:text-white text-darkModeColor">Hola, soy <span class="dark:text-darkModeOrange text-lightModeOrange">Kevin García</span></h1>
				<div class="gap-y-2 flex flex-col mt-9">
					<p class="dark:text-white text-darkModeColor text-xl font-bold"><span class="dark:text-darkModeOrange text-lightModeOrange">Front-end developer</span> con 2 años de experiencia, egresado de la carrera Ingeniería en Sistemas. </p>
					<p class="dark:text-white text-darkModeColor text-xl font-bold">Tengo conocimientos en <spa class="dark:text-darkModeOrange text-lightModeOrange">UX/UI</spa>, esto en la creación de diseños y/o mockup's.</p>
				</div>
				<div class="flex gap-5 mt-10">
					{socialMedia.map(({socialName, socialIcon: Icons, socialNetworkUrl}) => (
						<a class="inline-flex items-center gap-[5px] py-2 px-[18px] rounded-2xl shadow-[4px_4px_0px_0px_rgba(255,144,64)] hover:shadow-[7px_7px_0px_0px_rgba(255,144,64)] duration-200 border-2 dark:border-darkModeOrange border-darkModeColor dark:bg-white bg-[#ff9040ed] cursor-pointer" href={socialNetworkUrl} role="link" target="_blank">
							<Icons class="fill-darkModeColor w-6 h-6"/>
							<p class="text-darkModeColor font-bold">{socialName}</p>
						</a>
					))}
				</div>
			</section>
		</article>
		<Experience/>
		<Projects/>
		<SkillsAndTools/>
	</main>
</Layout>

